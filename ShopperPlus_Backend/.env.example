# Environment Configuration
NODE_ENV=production
PORT=3000

# Database Configuration
DB_HOST=postgresql-service
DB_PORT=5432
DB_NAME=shopperplus
DB_USER=shopperplus
DB_PASSWORD=your-secure-password
DB_SSL=true

# Memcached Configuration
MEMCACHED_HOST=memcached-service
MEMCACHED_PORT=11211

# Tor Proxy Configuration
TOR_PROXY_HOST=tor-proxy-service
TOR_PROXY_PORT=9050
TOR_CONTROL_PORT=9051
TOR_CONTROL_PASSWORD=your-tor-password

# JWT Configuration
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=7d

# Apple Push Notifications
APN_KEY_ID=your-apn-key-id
APN_TEAM_ID=your-apn-team-id
APN_BUNDLE_ID=com.yourcompany.shopperplus
APN_PRIVATE_KEY_PATH=/etc/ssl/certs/apn-private-key.p8

# Cache TTL Settings (in seconds)
PRICE_CACHE_TTL=3600
PRODUCT_META_CACHE_TTL=86400
API_CACHE_TTL=1800

# Scraper Configuration
MAX_CONCURRENT_SCRAPERS=10
SCRAPER_DELAY_MS=2000
CIRCUIT_ROTATION_REQUESTS=75
USER_AGENT=Mozilla/5.0 (iPhone; CPU iPhone OS 17_0 like Mac OS X) AppleWebKit/605.1.15

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
LOG_LEVEL=info
METRICS_PORT=9090
