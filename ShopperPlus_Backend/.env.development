# Local Development Environment
NODE_ENV=development
PORT=3000

# Database Configuration (for docker-compose with Red Hat PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=shopperplus
DB_USER=shopperplus
DB_PASSWORD=password
DB_SSL=false

# Memcached Configuration (for docker-compose)
MEMCACHED_HOST=localhost
MEMCACHED_PORT=11211

# Tor Proxy Configuration (for docker-compose)
TOR_PROXY_HOST=localhost
TOR_PROXY_PORT=9050
TOR_CONTROL_PORT=9051
TOR_CONTROL_PASSWORD=development-password

# JWT Configuration
JWT_SECRET=development-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# Cache TTL Settings (in seconds)
PRICE_CACHE_TTL=3600
PRODUCT_META_CACHE_TTL=86400
API_CACHE_TTL=1800

# Scraper Configuration
MAX_CONCURRENT_SCRAPERS=3
SCRAPER_DELAY_MS=3000
CIRCUIT_ROTATION_REQUESTS=50
USER_AGENT=Mozilla/5.0 (iPhone; CPU iPhone OS 17_0 like Mac OS X) AppleWebKit/605.1.15

# Rate Limiting (more lenient for development)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging
LOG_LEVEL=debug
